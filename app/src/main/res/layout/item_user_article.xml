<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvArticleCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Technology"
                android:textColor="@color/colorPrimaryBLUE"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/category_button"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:layout_marginEnd="8dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/ivEditArticle"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_build_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Edit Artikel"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:id="@+id/ivDeleteArticle"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_delete_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Hapus Artikel" />
        </LinearLayout>

        <!-- Judul -->
        <TextView
            android:id="@+id/tvArticleTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Judul Artikel Contoh"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Deskripsi -->
        <TextView
            android:id="@+id/tvArticleDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Ini deskripsi singkat artikel yang akan tampil di profil pengguna..."
            android:textColor="@color/colorSubText"
            android:textSize="14sp"
            android:maxLines="3"
            android:ellipsize="end" />

        <!-- Tanggal -->
        <TextView
            android:id="@+id/tvArticleDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="25 Des 2024, 10:30"
            android:textColor="@color/colorSubText"
            android:textSize="12sp"
            android:gravity="end" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
